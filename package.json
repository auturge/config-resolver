{
  "name": "@auturge/config-resolver",
  "version": "1.0.0",
  "description": "auturge/config-resolver - finds and loads your config file, or returns null",
  "author": "auturge",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/auturge/config-resolver/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/auturge/config-resolver.git"
  },
  "homepage": "https://github.com/auturge/config-resolver",
  "main": "config-resolver.js",
  "module": "config-resolver.es6.js",
  "jsnext:main": "config-resolver.es6.js",
  "files": [
    "config-resolver.js",
    "config-resolver.d.ts",
    "config-resolver.es6.js",
    "config-resolver.es6.d.ts",
    "README.md",
    "CHANGELOG.md",
    "LICENSE.txt"
  ],
  "engines": {
    "node": ">=12.8.1"
  },
  "scripts": {
    "build": "npm run ~rollup",
    "test": "npm-run-all ~test:clean ~test:run",
    "clean": "shx rm -rf dist build test/coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "package": "npm-run-all clean ~rollup ~copy",
    "~copy": "npm-run-all ~copy:package:json ~copy:readme ~copy:license ~copy:changelog",
    "~copy:changelog": "shx cp ./CHANGELOG.md ./dist",
    "~copy:package:json": "node ./scripts/copy-package-json/copy-trimmed-package-json.js ./package.json ./dist",
    "~copy:readme": "shx cp ./README.md ./dist",
    "~copy:license": "shx cp ./LICENSE ./dist",
    "~rollup": "rollup -c",
    "~test:clean": "shx rm -rf coverage",
    "~test:run": "nyc ts-mocha --paths -p ./tsconfig.json \"./test/**/*.spec.ts\"",
    "~test:report": "nyc report --reporter=text-lcov | coveralls"
  },
  "devDependencies": {
    "@auturge/testing": "^1.0.0",
    "@babel/core": "7.13.8",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/chai": "^4.2.17",
    "@types/mocha": "^8.2.2",
    "@types/node": "^12.20.12",
    "@types/sinon": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "@wessberg/rollup-plugin-ts": "^2.0.4",
    "awesome-typescript-loader": "^5.2.1",
    "chai": "^4.3.4",
    "coveralls": "^3.1.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "is-valid-path": "^0.1.1",
    "mocha": "^10.1.0",
    "mocha-lcov-reporter": "^1.3.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rollup": "^2.47.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts-paths": "^1.0.5",
    "shx": "^0.3.3",
    "sinon": "^10.0.0",
    "source-map": "^0.7.3",
    "source-map-support": "^0.5.19",
    "tsconfig-paths": "^3.9.0",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.1.1",
    "tslib": "^2.2.0",
    "typescript": "^3.9.9"
  }
}
